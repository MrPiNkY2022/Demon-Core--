<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D001A" <!-- Dark astral background -->
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Demon Core ðŸ”±"
        android:textSize="32sp"
        android:textColor="#FF00FF"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="64dp" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/status_idle"
        android:textSize="18sp"
        android:textColor="#00FFFF"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/btn_scan_soul"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/scan_soul"
        android:backgroundTint="#FF0000"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/tv_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="32dp" />

    <Button
        android:id="@+id/btn_aura"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/analyze_aura"
        android:backgroundTint="#800080"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/btn_scan_soul"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_karma"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/check_karma"
        android:backgroundTint="#006400"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/btn_aura"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
