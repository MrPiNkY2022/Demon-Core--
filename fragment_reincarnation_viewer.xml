<!-- app/src/main/res/layout/fragment_reincarnation_viewer.xml -->
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D001A">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/tv_timeline_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reincarnation Timeline ðŸ”±"
            android:textSize="30sp"
            android:textColor="#FF00FF"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="48dp" />

        <TextView
            android:id="@+id/tv_timeline_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Loading multiverse connections..."
            android:textSize="18sp"
            android:textColor="#00FFFF"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tv_timeline_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" />

        <TextView
            android:id="@+id/tv_past_lives"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Past Lives:\nScanning..."
            android:textSize="20sp"
            android:textColor="#FF5722"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_timeline_status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="48dp" />

        <TextView
            android:id="@+id/tv_future_lives"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Future Lives:\nPredicting..."
            android:textSize="20sp"
            android:textColor="#00FF00"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_past_lives"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="48dp" />

        <Button
            android:id="@+id/btn_refresh_reincarnation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refresh Timeline"
            android:backgroundTint="#006400"
            app:layout_constraintTop_toBottomOf="@id/tv_future_lives"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="96dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
