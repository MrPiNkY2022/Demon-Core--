<!-- res/layout/fragment_step_wallet_sign.xml -->
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 3: Connect & Sign"
        android:textSize="24sp"
        android:textColor="#00FFFF"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect your wallet and sign a message to verify ownership."
        android:textSize="16sp"
        android:textColor="#AAAAAA"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tv_wallet_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Disconnected"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/btn_connect_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect Wallet"
        android:backgroundTint="#800080"
        android:layout_gravity="center"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/btn_sign_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Verification Message"
        android:backgroundTint="#006400"
        android:layout_gravity="center"
        android:layout_marginTop="24dp" />

</LinearLayout>
