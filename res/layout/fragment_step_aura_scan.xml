<!-- res/layout/fragment_step_aura_scan.xml -->
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <androidx.camera.view.PreviewView
        android:id="@+id/preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_aura_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Press Start to scan aura..."
        android:textColor="#00FFFF"
        android:textSize="20sp"
        android:gravity="center"
        android:background="#80000000"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/btn_start_aura_scan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btn_start_aura_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Aura Scan"
        android:backgroundTint="#FF00FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="64dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
